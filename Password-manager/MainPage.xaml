<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Password_manager.MainPage"
             x:Name="MainPageRoot">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackLayout>
            <ContentView>
                <HorizontalStackLayout Spacing="10" Padding="10">
                    <Button Text="Add" Clicked="OnShowAddView"/>
                </HorizontalStackLayout>
            </ContentView>
            <CollectionView 
                            Grid.Column="0"
                            BackgroundColor="white"
                            ItemsSource="{Binding PasswordList}"
                            SelectedItem="{Binding SelectedPassword}"
                            SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0"
                                   Text="{Binding Title}"
                                   TextColor="Black"
                                   VerticalOptions="Center">    
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Tapped="OnShowDataView"
                                        CommandParameter="{Binding}"/>
                                </Label.GestureRecognizers>
                            </Label>

                            <Button Grid.Column="1"
                                    Text="&#8942;"
                                    Width="20"
                                    Height="20"
                                    BackgroundColor="Transparent">
                                <FlyoutBase.ContextFlyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem 
                                                        Text="Delete"
                                                        Command="{Binding Source={x:Reference MainPageRoot}, Path=DeleteCommand}"
                                                        CommandParameter="{Binding}"/>
                                    </MenuFlyout>
                                </FlyoutBase.ContextFlyout>
                            </Button>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical"/>
                </CollectionView.ItemsLayout>
            
            </CollectionView>
        </StackLayout>
        <ContentView 
                    x:Name="DynamicContentView"
                    BackgroundColor="DarkGray"
                    Grid.Column="1"/>
    </Grid>

</ContentPage>
