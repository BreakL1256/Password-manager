<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Password_manager.MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <CollectionView 
                        Grid.Column="0"
                        BackgroundColor="white"
                        ItemsSource="{Binding PasswordList}"
                        SelectedItem="{Binding SelectedPassword}"
                        SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer/>
                        </Grid.GestureRecognizers>

                        <Label Text="{Binding Title}"
                               TextColor="Black"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical"/>
            </CollectionView.ItemsLayout>
            
        </CollectionView>

        <ContentView 
                    BackgroundColor="DarkGray"
                    Grid.Column="1">
            <StackLayout>
                <Label Text="{Binding SelectedPassword.Username}" TextColor="White"/>
                <Label Text="{Binding SelectedPassword.Password}" TextColor="White"/>
            </StackLayout>
        </ContentView>
    </Grid>

</ContentPage>
