<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Password_manager.MainPage"
             x:Name="MainPageRoot">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Bar -->
        <Grid Grid.Row="0" 
              BackgroundColor="{AppThemeBinding Light=#FBFBFD, Dark=#1C1C1E}"
              HeightRequest="60"
              Padding="20,0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- App Title -->
            <Label Grid.Column="0"
                   Text="Password manager"
                   FontSize="22"
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"/>

            <!-- Action Buttons -->
            <HorizontalStackLayout Grid.Column="1" 
                                   Spacing="16"
                                   VerticalOptions="Center">
                <Button Text="Sync" 
                        Command="{Binding Cloud}"
                        BackgroundColor="Transparent"
                        TextColor="{AppThemeBinding Light=#007AFF, Dark=#0A84FF}"
                        BorderWidth="0"
                        HeightRequest="36"
                        FontSize="14"/>

                <Button Text="Settings" 
                        Command="{Binding SettingsCommand}"
                        BackgroundColor="Transparent"
                        TextColor="{AppThemeBinding Light=#007AFF, Dark=#0A84FF}"
                        BorderWidth="0"
                        HeightRequest="36"
                        FontSize="14"/>

                <Button Text="Logout" 
                        Command="{Binding LogoutFromAccount}"
                        BackgroundColor="Transparent"
                        TextColor="{AppThemeBinding Light=#FF3B30, Dark=#FF453A}"
                        BorderWidth="0"
                        HeightRequest="36"
                        FontSize="14"/>
            </HorizontalStackLayout>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" 
                  BackgroundColor="{AppThemeBinding Light=#F2F2F7, Dark=#2C2C2E}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0"
                        Text="Add Password"
                        FontSize="16"
                        Clicked="OnShowAddView"
                        BackgroundColor="{AppThemeBinding Light=#007AFF, Dark=#0A84FF}"
                        TextColor="White"
                        Margin="16,16,16,12"
                        HeightRequest="44"
                        CornerRadius="10"
                        BorderWidth="0"/>

                <CollectionView Grid.Row="1"
                                ItemsSource="{Binding PasswordList}"
                                SelectedItem="{Binding SelectedPassword}"
                                SelectionMode="Single"
                                BackgroundColor="Transparent">

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid HeightRequest="50" 
                                  Padding="16,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0"
                                       Text="{Binding Title}"
                                       FontSize="16"
                                       TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                                       VerticalOptions="Center"
                                       Margin="0">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer
                                            Tapped="OnShowDataView"
                                            CommandParameter="{Binding}"/>
                                    </Label.GestureRecognizers>
                                </Label>

                                <Button Grid.Column="1"
                                        Text="•••"
                                        BackgroundColor="Transparent"
                                        TextColor="{AppThemeBinding Light=#8E8E93, Dark=#8E8E93}"
                                        WidthRequest="40"
                                        HeightRequest="40"
                                        BorderWidth="0"
                                        FontSize="12">
                                    <FlyoutBase.ContextFlyout>
                                        <MenuFlyout>
                                            <MenuFlyoutItem 
                                                Text="Delete"
                                                Command="{Binding Source={x:Reference MainPageRoot}, Path=DeleteCommand}"
                                                CommandParameter="{Binding}"/>
                                        </MenuFlyout>
                                    </FlyoutBase.ContextFlyout>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical"/>
                    </CollectionView.ItemsLayout>
                </CollectionView>
            </Grid>

            <ContentView x:Name="DynamicContentView"
                        Grid.Column="1"
                        BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#000000}"
                        Padding="20"/>
        </Grid>
    </Grid>
</ContentPage>