<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Password_manager.RegisterPage"
             Title="RegisterPage">
    <VerticalStackLayout 
        Padding="40" 
        Spacing="20"
        VerticalOptions="Center"
        HorizontalOptions="Center"
        WidthRequest="400">

        <Label Text="Create Account" 
               FontSize="32" 
               FontAttributes="Bold"
               HorizontalOptions="Center"/>
        <Border x:Name="UsernameBorder"
                Stroke="{Binding UsernameBorderColor}"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 8"
                Padding="4">
            <Entry x:Name="UsernameEntry"
                   Text="{Binding Username}"
                   Placeholder="Username"
                   FontSize="16"/>
        </Border>

        <Border x:Name="PasswordBorder"
                Stroke="{Binding PasswordBorderColor}"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 8"
                Padding="4">
            <Entry x:Name="PasswordEntry"
                   Text="{Binding Password}"
                   Placeholder="Password" 
                   IsPassword="True"
                   FontSize="16"/>
        </Border>

        <Border x:Name="ConfirmPasswordBorder"
                Stroke="{Binding ConfirmPasswordBorderColor}"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 8"
                Padding="4">
            <Entry x:Name="ConfirmPasswordEntry"
                   Text="{Binding ConfirmPassword}"
                   Placeholder="Confirm Password" 
                   IsPassword="True"
                   FontSize="16"/>
        </Border>

        <Button Text="Register"
                Command="{Binding RegisterCommand}"
                BackgroundColor="Green"
                TextColor="White"
                HeightRequest="50"/>

        <Button Text="Back to Login"
                Command="{Binding NavigateBackToLoginCommand}"
                BackgroundColor="Transparent"
                TextColor="Blue"/>

        <ActivityIndicator IsRunning="{Binding IsLoading}"
                          IsVisible="{Binding IsLoading}"
                          Color="Blue"/>
    </VerticalStackLayout>
</ContentPage>