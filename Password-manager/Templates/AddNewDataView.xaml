<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Password_manager.Templates.AddNewDataView">

    <ScrollView>
        <VerticalStackLayout Spacing="0" Padding="20">

            <Border BackgroundColor="{AppThemeBinding Light=#DED2C3, Dark=#2C2C2E}"
                   Padding="16"
                   StrokeShape="RoundRectangle 10"
                   Stroke="Transparent"
                   Margin="0,0,0,16">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Title"
                           FontSize="13"
                           TextColor="{AppThemeBinding Light=#8E8E93, Dark=#8E8E93}"/>
                    <Entry x:Name="TitleField"
                           FontSize="17"
                           BackgroundColor="Transparent"
                           TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                           Placeholder="Enter title"
                           PlaceholderColor="{AppThemeBinding Light=#C6C6C8, Dark=#636366}"/>
                </VerticalStackLayout>
            </Border>

            <Border BackgroundColor="{AppThemeBinding Light=#DED2C3, Dark=#2C2C2E}"
                   Padding="16"
                   StrokeShape="RoundRectangle 10"
                   Stroke="Transparent"
                   Margin="0,0,0,16">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Category"
                           FontSize="13"
                           TextColor="{AppThemeBinding Light=#8E8E93, Dark=#8E8E93}"/>

                    <FlexLayout Wrap="Wrap" JustifyContent="Start" Direction="Row" AlignItems="Start">

                        <Button x:Name="GeneralCategoryButton"
                                Text="General"
                                Clicked="OnCategoryButtonClicked"
                                TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                                HeightRequest="44"
                                CornerRadius="10"
                                BorderWidth="1"
                                BorderColor="{AppThemeBinding Light=#C6C6C8, Dark=#636366}"
                                FontSize="14"
                                Margin="0,0,8,8"
                                Padding="12,0">
                        </Button>

                        <Button x:Name="WorkCategoryButton"
                                Text="Work"
                                Clicked="OnCategoryButtonClicked"
                                TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                                HeightRequest="44"
                                CornerRadius="10"
                                BorderWidth="1"
                                BorderColor="{AppThemeBinding Light=#C6C6C8, Dark=#636366}"
                                FontSize="14"
                                Margin="0,0,8,8"
                                Padding="12,0">
                        </Button>

                        <Button x:Name="SocialCategoryButton"
                                Text="Social"
                                Clicked="OnCategoryButtonClicked"
                                TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                                HeightRequest="44"
                                CornerRadius="10"
                                BorderWidth="1"
                                BorderColor="{AppThemeBinding Light=#C6C6C8, Dark=#636366}"
                                FontSize="14"
                                Margin="0,0,8,8"
                                Padding="12,0">
                        </Button>

                        <Button x:Name="OtherCategoryButton"
                                Text="Other"
                                Clicked="OnCategoryButtonClicked"
                                TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                                HeightRequest="44"
                                CornerRadius="10"
                                BorderWidth="1"
                                BorderColor="{AppThemeBinding Light=#C6C6C8, Dark=#636366}"
                                FontSize="14"
                                Margin="0,0,8,8"
                                Padding="12,0">
                        </Button>
                    </FlexLayout>
                </VerticalStackLayout>
            </Border>

            <Border BackgroundColor="{AppThemeBinding Light=#DED2C3, Dark=#2C2C2E}"
                   Padding="16"
                   StrokeShape="RoundRectangle 10"
                   Stroke="Transparent"
                   Margin="0,0,0,16">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Username"
                           FontSize="13"
                           TextColor="{AppThemeBinding Light=#8E8E93, Dark=#8E8E93}"/>
                    <Entry x:Name="UsernameField"
                           FontSize="17"
                           BackgroundColor="Transparent"
                           TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                           Placeholder="Enter username"
                           PlaceholderColor="{AppThemeBinding Light=#C6C6C8, Dark=#636366}"/>
                </VerticalStackLayout>
            </Border>

            <Border BackgroundColor="{AppThemeBinding Light=#DED2C3, Dark=#2C2C2E}"
                   Padding="16"
                   StrokeShape="RoundRectangle 10"
                   Stroke="Transparent"
                   Margin="0,0,0,24">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Password"
                           FontSize="13"
                           TextColor="{AppThemeBinding Light=#8E8E93, Dark=#8E8E93}"/>
                    <Entry x:Name="PasswordField"
                           FontSize="17"
                           BackgroundColor="Transparent"
                           TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                           Placeholder="Enter password"
                           PlaceholderColor="{AppThemeBinding Light=#C6C6C8, Dark=#636366}"/>
                </VerticalStackLayout>
            </Border>

            <VerticalStackLayout Spacing="12">
                <Button x:Name="GeneratePasswordButton" 
                        Text="Generate Secure Password" 
                        Clicked="OnGeneratePasswordClicked" 
                        BackgroundColor="{AppThemeBinding Light=#E9E1D7, Dark=#2C2C2E}"
                        TextColor="{AppThemeBinding Light=#50483E, Dark=#0A84FF}"
                        HeightRequest="44"
                        CornerRadius="10"
                        BorderWidth="0"
                        FontSize="16"/>         
                <Button Text="Add" 
                        Clicked="OnNewDataSubmit"
                        BackgroundColor="{AppThemeBinding Light=#50483E, Dark=#0A84FF}"
                        TextColor="White"
                        HeightRequest="50"
                        CornerRadius="10"
                        BorderWidth="0"
                        FontSize="16"/>

                
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentView>