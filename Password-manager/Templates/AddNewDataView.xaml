<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Password_manager.Templates.AddNewDataView">
    <VerticalStackLayout>
        <Label 
            Text="Title"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry
            x:Name="TitleField"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Width="100"/>
        <Label
            Text="Username"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>
        <Entry
            x:Name="UsernameField"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Width="100"/>
        <Label
              Text="Password"
              VerticalOptions="Center" 
              HorizontalOptions="Center"/>
        <Entry
            x:Name="PasswordField"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Width="100"/>
        <Label
              Text="Category"
              VerticalOptions="Center" 
              HorizontalOptions="Center"/>
        <Entry
            x:Name="CategoryField"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Width="100"/>
        <Button Text="Add" Clicked="OnNewDataSubmit"/>
        <Button x:Name="GeneratePasswordButton" 
        Text="Generate Secure Password" 
        Clicked="OnGeneratePasswordClicked" 
        BackgroundColor="#007ACC" 
        TextColor="White" 
        Margin="0,5,0,0" />
    </VerticalStackLayout>
</ContentView>
