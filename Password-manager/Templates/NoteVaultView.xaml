<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Password_manager.Templates.NoteVaultView"
             x:Name="NoteVault">
    <Grid
        BackgroundColor="#EFE9E3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0"
                x:Name="AddNoteBtn"
                Command="{Binding AddNewNoteCommand}"
                Text="+"
                HeightRequest="40"
                BackgroundColor="#D3C3AF"
                TextColor="#EFE9E3"
                CornerRadius="5"
                Margin="10"/>

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding NoteList}"
                        SelectedItem="{Binding SelectedNote}"
                        SelectionMode="Single">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid HeightRequest="80" Padding="16,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0"
                               Text="{Binding ContentPreview}"
                               FontSize="16"
                               TextColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
                               VerticalOptions="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={x:Reference NoteVault}, Path=OpenNoteEditorCommand}"
                                    CommandParameter="{Binding}"/>
                            </Label.GestureRecognizers>
                        </Label>

                        <HorizontalStackLayout Grid.Column="1" Spacing="8" VerticalOptions="Center">

                            <Label Text="{Binding RemainingTime}"
                                   IsVisible="{Binding IsDeleted}"
                                   TextColor="{AppThemeBinding Light=#FF3B30, Dark=#FF453A}"
                                   FontSize="12"
                                   VerticalOptions="Center"
                                   Margin="0,0,8,0"/>

                            <Button Text="Edit"
                                    Command="{Binding Source={x:Reference NoteVault}, Path=OpenNoteEditorCommand}"
                                    CommandParameter="{Binding}"
                                    BackgroundColor="{AppThemeBinding Light=#E9E1D7, Dark=#3A3A3C}"
                                    TextColor="{AppThemeBinding Light=#50483E, Dark=#0A84FF}"
                                    FontSize="12"
                                    HeightRequest="30"
                                    Padding="10,0"
                                    CornerRadius="6"
                                    BorderWidth="0">
                                <Button.Triggers>
                                    <DataTrigger TargetType="Button" Binding="{Binding IsDeleted}" Value="True">
                                        <Setter Property="IsVisible" Value="False" />
                                    </DataTrigger>
                                </Button.Triggers>
                            </Button>

                            <Button Text="Restore"
                                    IsVisible="{Binding IsDeleted}"
                                    Command="{Binding Source={x:Reference NoteVault}, Path=RestoreNoteCommand}"
                                    CommandParameter="{Binding}"
                                    BackgroundColor="{AppThemeBinding Light=#E5E5EA, Dark=#3A3A3C}"
                                    TextColor="{AppThemeBinding Light=#007AFF, Dark=#0A84FF}"
                                    FontSize="12"
                                    HeightRequest="30"
                                    Padding="10,0"
                                    CornerRadius="6"
                                    BorderWidth="0"/>

                            <Button Text="•••"
                                    BackgroundColor="Transparent"
                                    TextColor="{AppThemeBinding Light=#8E8E93, Dark=#8E8E93}"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    FontSize="12">
                                <FlyoutBase.ContextFlyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem 
                                            Text="{Binding DeleteActionText}"
                                            Command="{Binding Source={x:Reference NoteVault}, Path=DeleteNoteCommand}"
                                            CommandParameter="{Binding}"/>
                                    </MenuFlyout>
                                </FlyoutBase.ContextFlyout>
                            </Button>
                        </HorizontalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Grid.Row="2"
                x:Name="TrashToggleBtn"
                Text="Trash"
                Clicked="OnToggleTrash"
                BackgroundColor="Transparent"
                TextColor="{AppThemeBinding Light=#8E8E93, Dark=#8E8E93}"
                Margin="16"
                HeightRequest="40"
                BorderWidth="1"
                BorderColor="{AppThemeBinding Light=#C6C6C8, Dark=#636366}"/>
    </Grid>
</ContentView>