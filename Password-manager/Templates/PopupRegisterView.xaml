<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="Password_manager.Templates.PopupRegisterView"
    VerticalOptions="Center"      
    HorizontalOptions="Center">

    <Border
        WidthRequest="500"
        HeightRequest="500"
        BackgroundColor="White"
        Padding="0">
        <VerticalStackLayout 
            VerticalOptions="Center"
            Padding="20" 
            Spacing="10">

            <Label Text="Create Cloud Account" 
               FontSize="25" 
               FontAttributes="Bold"
               HorizontalOptions="Center"/>
            <Border x:Name="EmailBorder"
                Stroke="Gray"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 8"
                Padding="4">
                <Entry x:Name="EmailEntry" 
                   Placeholder="Email"
                   FontSize="16"/>
            </Border>

            <Border x:Name="PasswordBorder"
                Stroke="Gray"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 8"
                Padding="4">
                <Entry x:Name="PasswordEntry" 
                   Placeholder="Password" 
                   IsPassword="True"
                   FontSize="16"/>
            </Border>

            <Border x:Name="ConfirmPasswordBorder"
                Stroke="Gray"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 8"
                Padding="4">
                <Entry x:Name="ConfirmPasswordEntry" 
                   Placeholder="Confirm Password" 
                   IsPassword="True"
                   FontSize="16"/>
            </Border>

            <Button Text="Register"
                Command="{Binding RegisterCommand}"
                BackgroundColor="Green"
                TextColor="White"
                HeightRequest="50"/>

            <Button Text="Back to Login"
                Command="{Binding NavigateBackToLoginCommand}"
                BackgroundColor="Transparent"
                TextColor="Blue"/>
        </VerticalStackLayout>
    </Border>
</toolkit:Popup>
