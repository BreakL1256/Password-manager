<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Password_manager.Templates.PopupRegisterView">
    <VerticalStackLayout 
    Padding="20" 
    Spacing="10"
    VerticalOptions="Center"
    HorizontalOptions="Center"
    WidthRequest="200">

        <Label Text="Create Cloud Account" 
           FontSize="25" 
           FontAttributes="Bold"
           HorizontalOptions="Center"/>
        <Border x:Name="UsernameBorder"
            Stroke="Gray"
            StrokeThickness="2"
            StrokeShape="RoundRectangle 8"
            Padding="4">
            <Entry x:Name="UsernameEntry" 
               Placeholder="Username"
               FontSize="16"/>
        </Border>

        <Border x:Name="PasswordBorder"
            Stroke="Gray"
            StrokeThickness="2"
            StrokeShape="RoundRectangle 8"
            Padding="4">
            <Entry x:Name="PasswordEntry" 
               Placeholder="Password" 
               IsPassword="True"
               FontSize="16"/>
        </Border>

        <Border x:Name="ConfirmPasswordBorder"
            Stroke="Gray"
            StrokeThickness="2"
            StrokeShape="RoundRectangle 8"
            Padding="4">
            <Entry x:Name="ConfirmPasswordEntry" 
               Placeholder="Confirm Password" 
               IsPassword="True"
               FontSize="16"/>
        </Border>

        <Button Text="Register"
            Command="{Binding RegisterCommand}"
            BackgroundColor="Green"
            TextColor="White"
            HeightRequest="50"/>

        <Button Text="Back to Login"
            Command="{Binding NavigateBackToLoginCommand}"
            BackgroundColor="Transparent"
            TextColor="Blue"/>
    </VerticalStackLayout>
</ContentView>
